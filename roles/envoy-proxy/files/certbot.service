[Unit]
Description=Certbot cert renewal
After=network-online.target

[Service]
Environment=
Type=exec
ExecStart=/usr/bin/certbot certonly --dns-ovh --dns-ovh-credentials /etc/ovh-creds.ini --non-interactive --agree-tos --email david@dcaro.es -d '*.dcaro.es'
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
